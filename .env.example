# Authentication secrets
AUTH_SECRET=your_auth_secret_here
TOKEN_SECRET=your_token_secret_here

# MongoDB connection
# Use mongodb://localhost:27017 for local development
# Use mongodb+srv://username:password@cluster.example.mongodb.net for MongoDB Atlas
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=macro_chef

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Cloudinary configuration for image uploads
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Email configuration for password reset and notifications
NODE_MAILER_PORT=465
NODE_MAILER_HOST=smtp.example.com
NODE_MAILER_USER=your_email@example.com
NODE_MAILER_PASS=your_email_app_password

# Application domain (used for email links and callbacks)
# Use http://localhost:3000 for local development
DOMAIN=http://localhost:3000 