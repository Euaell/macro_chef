# Database (PostgreSQL)
DATABASE_URL=postgres://mizan:mizan_dev_password@localhost:5432/mizan
DB_PASSWORD=mizan_dev_password

# BetterAuth
BETTER_AUTH_SECRET=your_super_secret_key_change_in_production
BETTER_AUTH_URL=http://localhost:3000

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AI Services (OpenAI)
OPENAI_API_KEY=

# Email (for verification emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@mizan.app

# Cloudinary (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Redis (optional, for SignalR scaling)
REDIS_URL=redis://localhost:6379

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=
